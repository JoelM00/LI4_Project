@page "/verEmpresas"

@using DataLibrary
@using Rem.Models
@using Microsoft.Extensions.Configuration
@inject IDataAcess _data
@inject IConfiguration _config
@inject LoggedState loginState
@inject NavigationManager NavManager


<h3>Empresas</h3>
@if (empresas == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descricao</th>
                <th>Sede</th>
                <th>Contacto</th>
                <th>CEO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in empresas)
            {
            <tr>
                <td>@c.ID</td>
                <td>@c.Nome</td>
                <td>@c.Descricao</td>
                <td>@c.Sede</td>
                <td>@c.Contacto</td>
                <td>@c.Ceo</td>
            </tr>
            }
        </tbody>
    </table>
}
@code {

    List<VerEmpresaModel> empresas;


    protected override async Task OnInitializedAsync()
    {
        string sql = "CALL verEmpresas()";
        empresas = await _data.LoadData<VerEmpresaModel, dynamic>(sql, new { }, _config.GetConnectionString("default"));
    }
}